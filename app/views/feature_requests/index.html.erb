<h1>CipherHealth Feature Tracker</h1>

<%= link_to 'Add Feature Request', new_feature_request_path, class: "btn btn-success btn-lg btn-block", role: "button" %>

<h2>Open Feature Requests</h2>
<table class="table table-hover">
  <colgroup>
    <col span="1" style="width: 25%;">
    <col span="1" style="width: 60%;">
    <col span="1" style="width: 5%;">
    <col span="1" style="width: 10%;">
  </colgroup>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Description</th>
      <th>Votes</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @open_feature_requests.each do |feature_request| %>
      <tr>
        <td><%= link_to feature_request.subject, feature_request_path(feature_request) %></td>
        <td><%= feature_request.description %></td>
        <td><%= feature_request.votes %></td>
        <td><%= link_to 'Upvote', upvote_feature_request_path(feature_request) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>In-Progress Feature Requests</h2>
<table class="table table-hover">
  <colgroup>
    <col span="1" style="width: 25%;">
    <col span="1" style="width: 75%;">
  </colgroup>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @in_progress_feature_requests.each do |feature_request| %>
      <tr>
        <td><%= feature_request.subject %></td>
        <td><%= feature_request.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
