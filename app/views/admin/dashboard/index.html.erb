<h1>Admin Dashboard</h1>

<%= link_to 'Home', root_path %>
<h2>Manage Open Feature Requests</h2>
<table class="table table-hover">
  <colgroup>
    <col span="1" style="width: 25%;">
    <col span="1" style="width: 75%;">
  </colgroup>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Description</th>
      <th>Requester</th>
      <th>Votes</th>
      <th>Status</th>
      <th span="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @open_feature_requests.each do |feature_request| %>
      <tr>
        <td><%= link_to feature_request.subject, feature_request_path(feature_request) %></td>
        <td><%= feature_request.description %></td>
        <td>Requester</td>
        <td><%= feature_request.votes %></td>
        <td><%= feature_request.status %></td>
        <td><%= link_to 'Edit', edit_feature_request_path(feature_request) %></td>
        <td><%= link_to 'Close', close_feature_request_path(feature_request), method: :put %></td>
      </tr>
    <% end %>
  </tbody>
</table>
